<h1>Blog</h1>
<div id="posts">
	<% @posts.each do |post| %>
		<div class="post_title">
			<p><%= post.title %></p>
		</div>
		<div class="post_content">
			<p><%= truncate post.content, :length => 100 %>
			</p>
			<%= link_to "Read more", :id => "show", post_path(post) %>
		</div>
	<% end %>
</div>